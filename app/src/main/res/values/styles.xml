<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="buttonBack" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="buttonSmall" parent="android:Widget.Button">
        <item name="android:background">@drawable/advisor_button</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="insta" parent="android:Widget.Button">
        <item name="android:background">@drawable/instagram</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="face" parent="android:Widget.Button">
        <item name="android:background">@drawable/facebook</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">0dp</item>
    </style>

</resources>
